<h1>Your Itineraries</h1>

<div class="itinerary-board">
  <%= form_for Itinerary.new do |it| %>
    <fieldset>
      <div class="form-group">
        <%= it.label :itinerary_name %>
        <%= it.text_field :itinerary_name, :required => true, :placeholder => 'Europe 2018', :class => "form-control" %>
      </div>
    </fieldset>
  <% end %>

  <div class="container">
    <% @itineraries.each do |itinerary| %>
      <div class="form-group">
        <%= form_for Day.new do |day| %>
        <%= hidden_field_tag 'day[itinerary_id]', itinerary.id %>
        <%= day.text_area :date, :required => false, :placeholder => '03.09.18', class: "form-control" %>
        <%= day.text_area :destination, :required => false, :placeholder => 'Tokyo', class: "form-control" %>
        <%= day.text_area :entry, :required => false, :placeholder => 'Arrive in Tokyo. Check in to hotel. Walk around city. Eat ramen.', class: "form-control" %>
        <%= day.submit "Add entry", class: "btn btn-default add-task-btn" %>
        <% end %>
      </div>


    <h3><%= itinerary.itinerary_name %></h3>
    <% end %>

  </div>

  <% @itineraries.each do |it| %>
    <h3><%= it.itinerary_name %></h3>
    <% it.days.each do |itdays| %>
    <ul>
      <li><%= itdays.date %></li>
      <li><%= itdays.destination %></li>
      <li><%= itdays.entry %></li>
    </ul>
    <% end %>
  <% end %>
</div>
